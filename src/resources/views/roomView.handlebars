{{#each Room}}
<div class="card mb-3">
  <script>
        Handlebars.registerHelper('ifEquals', function(arg1, arg2, options) {
          return (arg1 == arg2) ? options.fn(this) : options.inverse(this);
        });      
    </script>
  <div>
    <img src= {{this.image}} style="width:50%; height:50%">
  </div>
  <div class="card-body">
    <h5 class="card-title">{{this.description}}</h5>
    <p class="card-text">Thông tin phòng:</p>
    <p class="card-text">Số lượng người ở: {{this.limit}}.</p>
    <p class="card-text">Tiện ích: {{this.utilities}}.</p>
    <p class="card-text">Trạng thái:{{this.state}}.</p>
  </div>
  {{#ifEquals ../type 'host'}}
   <form class="needs-validation" novalidate action = "/host" method = "post">
    <input type="hidden" name="id" value={{this.id}} /> 
    <input type="hidden" name="type" value={{this.type}} /> 
    <div class="col-md-4">
      <label for="state" class="form-label">Lọc</label>
      <select class="form-select" id="state" name = "state">
        <option value = "">Chọn</option>
        <option value = "Còn trống">Còn trống</option>
        <option value = "Đã thuê">Đã thuê</option>
        <option value = "Tất cả">Tất cả</option>
      </select>
    <button class= "btn btn-primary btn" type="submit">Lọc</button>
    </div>
  </form>
  {{/ifEquals}}
</div>
{{/each}}