  <header class="p-3 bg-dark text-white">
    <script>
        Handlebars.registerHelper('ifEquals', function(arg1, arg2, options) {
          return (arg1 == arg2) ? options.fn(this) : options.inverse(this);
        });      
    </script>

    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/home?id={{this.id}}&type={{this.type}}" class="nav-link px-2 text-white">Home</a></li>
          
           {{#if this.id}}
              <li><a href="/search?id={{this.id}}&type={{this.type}}" class="nav-link px-2 text-white">Search</a></li>
          {{else}}
              <li><a href="/search" class="nav-link px-2 text-white">Search</a></li>
          {{/if}}
        </ul>
        <div class="text-end">
          {{#if this.id}}
              {{#ifEquals this.type "host"}}
                <a href="/host?id={{this.id}}&type={{this.type}}">
                  <button type="button" class="btn btn-outline-light me-2">Manage</button>
                </a>
              {{/ifEquals}}
              <a href="/home">
                  <button type="button" class="btn btn-outline-light me-2">Logout</button>
              </a>
          {{else}}
              <a href="/login">
                 <button type="button" class="btn btn-outline-light me-2">Login</button>
              </a>
              <a href="/register">
              <button type="button" class="btn btn-warning">Sign-up</button>
              </a>
          {{/if}}
        </div>
      </div>
    </div>
  </header>