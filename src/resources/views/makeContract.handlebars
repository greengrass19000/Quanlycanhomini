
<div class = "mt-4">
  <div class = "row">
    <div class="container">
        {{#each invoiceData}}
            <form action = "/host/invoiceAdded?id={{../id}}&type={{../type}}" method = "post">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Mã phòng</label>
                    <input class="form-control" name = "roomID" id = "roomID" value = {{this.id}} readonly>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Loại hóa đơn</label>
                    <input class="form-control" name = "type" id="type">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Giá tiền</label>
                    <input class="form-control" name ="price" id="pỉce">
                </div>
                <div class="col-md-5">
                    <label for="birthdate" class="form-label">Ngày</label>
                    <input type="date" class="form-control" id="time" name = "time">
                </div>
                 <div class="form-group">
                    <label for="exampleFormControlInput1">Mô tả</label>
                    <input class="form-control" name ="description" id="description">
                </div>
                <button class="btn btn-primary btn" type="submit">Thêm</button>
            </form>
        {{/each}}
    </div>
  </div>
</div>